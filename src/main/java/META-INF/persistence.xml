<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="bovedaspu">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/dataSources/BovedasDS</jta-data-source>

		<class>ec.bovedas.models.entities.Usuario</class>
		<class>ec.bovedas.models.entities.Provincia</class>
		<class>ec.bovedas.models.entities.Canton</class>
		<class>ec.bovedas.models.entities.Parroquia</class>
		<class>ec.bovedas.models.entities.Nacionalidad</class>
		<class>ec.bovedas.models.entities.Representante</class>
		<class>ec.bovedas.models.entities.Fallecido</class>
		<class>ec.bovedas.models.entities.RepresentanteFallecido</class>
		<class>ec.bovedas.models.entities.ActaDefuncion</class>
		<class>ec.bovedas.models.entities.Boveda</class>
		<class>ec.bovedas.models.entities.Mausoleo</class>
		<class>ec.bovedas.models.entities.HistorialBoveda</class>
		<class>ec.bovedas.models.entities.PeriodoPrecio</class>
		<class>ec.bovedas.models.entities.FacturaCabecera</class>
		<class>ec.bovedas.models.entities.FacturaDetalle</class>
		<class>ec.bovedas.models.entities.Contrato</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
		</properties>
	</persistence-unit>
</persistence>
